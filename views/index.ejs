  }
  
  
  function addZeros(num, digit) {
  	  var zero = '';
  	  num = num.toString();
  	  if (num.length < digit) {
  	    for (i = 0; i < digit - num.length; i++) {
  	      zero += '0';
  	    }
  	  }
  	  return zero + num;
  }
  
